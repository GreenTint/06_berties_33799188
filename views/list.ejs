<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title><%= shopData.shopName %> - Available Books</title>
  <link rel="stylesheet" href="/main.css">
</head>
<body>
  <h1><%= shopData.shopName %></h1>
  <p class="intro">Here are the books we sell:</p>

  <% if (!availableBooks || availableBooks.length === 0) { %>
    <p>No books found.</p>
  <% } else { %>
    <ul>
      <% availableBooks.forEach(function(book) { %>
        <li>
          <strong><%= book.name %></strong>
          <% if (book.price != null) { %>
            — <span class="price">£<%= Number(book.price).toFixed(2) %></span>
          <% } else { %>
            — <span class="price">N/A</span>
          <% } %>
        </li>
      <% }); %>
    </ul>
  <% } %>
</body>
</html>
